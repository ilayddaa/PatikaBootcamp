<style>
    :root {
        --primary: #ff2a6d;
        --secondary: #05d9e8;
        --dark: #01012b;
        --light: #d1f7ff;
        --accent: #005678;
    }

    body {
        position: relative;
        min-height: 100vh;
        color: var(--light);
        background: #000;
    }

    .cyber-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.4;
        z-index: 0;
    }

    .cyber-background::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg,
                rgba(255, 42, 109, 0.2) 0%,
                rgba(5, 217, 232, 0.2) 100%);
        z-index: 1;
    }

    .cyber-background::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(0deg,
                rgba(0, 0, 0, 0.2) 0px,
                rgba(0, 0, 0, 0.2) 1px,
                transparent 1px,
                transparent 2px);
        z-index: 2;
        animation: scanline 10s linear infinite;
    }

    .container {
        position: relative;
        z-index: 3;
    }

    .welcome-card {
        background: rgba(1, 1, 43, 0.9);
        backdrop-filter: blur(10px);
        border: 2px solid var(--primary);
        border-radius: 15px;
        position: relative;
        overflow: hidden;
    }

    .welcome-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
                transparent,
                rgba(255, 42, 109, 0.2),
                transparent);
        animation: scan 3s linear infinite;
    }

    .glitch-wrapper {
        padding: 20px 0;
        position: relative;
    }

    .glitch {
        color: var(--light);
        font-size: 3rem;
        font-weight: bold;
        position: relative;
        text-shadow: 0.05em 0 0 var(--primary),
            -0.025em -0.05em 0 var(--secondary),
            0.025em 0.05em 0 var(--accent);
        animation: glitch 500ms infinite;
    }

    .cyber-pulse {
        color: var(--secondary);
        font-size: 1.5rem;
        text-shadow: 0 0 10px var(--secondary);
        animation: pulse 2s infinite;
    }

    .feature-item {
        background: rgba(255, 42, 109, 0.1);
        border: 1px solid var(--primary);
        border-radius: 10px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .feature-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
                transparent,
                rgba(5, 217, 232, 0.2),
                transparent);
        animation: scan 2s linear infinite;
    }

    .feature-item:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 0 20px rgba(5, 217, 232, 0.3);
    }

    .cyber-icon {
        font-size: 2.5rem;
        color: var(--secondary);
        text-shadow: 0 0 10px var(--secondary);
    }

    .cyber-text {
        color: var(--primary);
        text-shadow: 0 0 5px var(--primary);
    }

    .cyber-text-muted {
        color: var(--light);
        opacity: 0.8;
    }

    .cyber-btn {
        position: relative;
        display: inline-block;
        padding: 15px 30px;
        background: var(--primary);
        color: var(--light);
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        overflow: hidden;
        transition: 0.5s;
    }

    .cyber-btn:hover {
        background: var(--primary);
        color: var(--light);
        box-shadow: 0 0 20px var(--primary);
        transform: scale(1.05);
    }

    .cyber-btn span {
        position: absolute;
        display: block;
    }

    .cyber-btn span:nth-child(1) {
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--secondary));
        animation: btn-anim1 1s linear infinite;
    }

    .cyber-btn-outline {
        position: relative;
        display: inline-block;
        padding: 15px 30px;
        background: transparent;
        color: var(--secondary);
        border: 2px solid var(--secondary);
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        overflow: hidden;
        transition: 0.5s;
    }

    .cyber-btn-outline:hover {
        background: var(--secondary);
        color: var(--dark);
        box-shadow: 0 0 20px var(--secondary);
        transform: scale(1.05);
    }

    @@keyframes scan {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }

    @@keyframes scanline {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(100%);
        }
    }

    @@keyframes pulse {
        0% {
            opacity: 0.5;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0.5;
        }
    }

    @@keyframes glitch {
        0% {
            text-shadow: 0.05em 0 0 var(--primary),
                -0.025em -0.05em 0 var(--secondary),
                0.025em 0.05em 0 var(--accent);
        }

        14% {
            text-shadow: 0.05em 0 0 var(--primary),
                -0.025em -0.05em 0 var(--secondary),
                0.025em 0.05em 0 var(--accent);
        }

        15% {
            text-shadow: -0.05em -0.025em 0 var(--primary),
                0.025em 0.025em 0 var(--secondary),
                -0.05em -0.05em 0 var(--accent);
        }

        49% {
            text-shadow: -0.05em -0.025em 0 var(--primary),
                0.025em 0.025em 0 var(--secondary),
                -0.05em -0.05em 0 var(--accent);
        }

        50% {
            text-shadow: 0.025em 0.05em 0 var(--primary),
                0.05em 0 0 var(--secondary),
                0 -0.05em 0 var(--accent);
        }

        99% {
            text-shadow: 0.025em 0.05em 0 var(--primary),
                0.05em 0 0 var(--secondary),
                0 -0.05em 0 var(--accent);
        }

        100% {
            text-shadow: -0.025em 0 0 var(--primary),
                -0.025em -0.025em 0 var(--secondary),
                -0.025em -0.05em 0 var(--accent);
        }
    }

    @@keyframes btn-anim1 {
        0% {
            left: -100%;
        }

        50%,
        100% {
            left: 100%;
        }
    }
</style>